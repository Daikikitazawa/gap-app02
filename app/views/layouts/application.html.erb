<!DOCTYPE html>
<html>
  <head>
    <title>GapApp02</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo"><%= link_to("Gap", "/") %></div>
      <div class="header-menu">
        <ul>
          <% if @current_user %>
             <li><%= link_to("Ranking", "/users/ranking") %></li>
             <li><%= link_to("Index", "/posts/index") %></li>
             <li><%= link_to("Post", "/posts/new") %></li>
             <li>
               <%= link_to("Mypage", "/users/#{@current_user.id}") %>
             </li>
             <li><%= link_to("Loguot", "/logout", {method: "post"}) %></li>
          <% else %>
             <li><%= link_to("About", "/about") %></li>
             <li><%= link_to("Signup", "/signup") %></li>
             <li><%= link_to("Login", "/login") %></li>
          <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
