<!DOCTYPE html>
<html>
  <head>
    <title>GapApp02</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="sidebar">
      <div class="header-logo"><%= link_to("Gap", "/", class:"link") %></div>
      <div class="header-menu">
        <ul>
          <% if @current_user %>
             <li><%= link_to("Ranking", "/posts/ranking", class:"link") %></li>
             <li><%= link_to("Index", "/posts/index", class:"link") %></li>
             <li><%= link_to("Voting", "/users/#{@current_user.id}/likes", class:"link") %></li>
             <li><%= link_to("Post", "/posts/new", class:"link") %></li>
             <li>
               <%= link_to("Mypage", "/users/#{@current_user.id}", class:"link") %>
             </li>
             <li><%= link_to("Loguot", "/logout", {method: "post", class:"link"}) %></li>
          <% else %>
             <li><%= link_to("About", "/about", class:"link") %></li>
             <li><%= link_to("Signup", "/signup", class:"link") %></li>
             <li><%= link_to("Login", "/login", class:"link") %></li>
          <% end %>
        </ul>
      </div>
      </div>
    </header>
    <div class="mainbar">
    <%= yield %>
    </div>
  </body>
</html>
